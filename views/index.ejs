<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <section class="background">
    <ul class="nav-list">
      <li class="dropdown">
        <a class="dropbar" href="#">|||||</a>
        <ul class="dropdown-content">
          <li><a href="/">Home</a></li>
          <li><a href="about">About <%=webApp%></a></li>
        </ul>
      </li>
      <div class="label-container">
        <h2 class="label">Welcome to <%=webApp%></h2>
      </div>
      <form action="/sendQuery" method="POST">
        <input type="text" name="userQuery" placeholder="Ask me anything...">
        <input type="hidden" name="conversationId" value="<%= conversationId %>">
        <button type="submit">Ask</button>
      </form>
      <% if (typeof response !== 'undefined') { %>
        <p>Chatbot says: <%= response %></p>
      <% } %>
    </ul>
  </section>
  </body>
</html>
